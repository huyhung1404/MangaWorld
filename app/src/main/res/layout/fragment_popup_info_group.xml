<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background">

    <TextView
        android:id="@+id/name_group_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name_category_info_popup_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_group_info"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="3dp"
        android:background="@drawable/border_text_view_read_book"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        android:textColor="@color/dark_yellow"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/name_category_info_popup_group"
        android:background="@color/post_gray" />

    <TextView
        android:id="@+id/intro_group_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_category_info_popup_group"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/number_member_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro_group_info"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/number_post_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_member_info"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/number_post_info"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="4dp"
        android:text="@string/number_admin"
        android:textSize="20sp"
        android:textStyle="bold" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_admin_info_group"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/number_post_info"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="50dp" />

    <TextView
        android:id="@+id/name_admin_info_group"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@id/number_post_info"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="45dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/leave_the_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/number_post_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:layout_marginBottom="35dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:text="@string/outGroup"
        android:textSize="26sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:drawableLeftCompat="@drawable/icon_exit_group" />

</RelativeLayout>