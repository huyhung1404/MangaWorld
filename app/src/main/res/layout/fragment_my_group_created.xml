<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main.CommunityFragment.MyProfileFragment.MyGroupsFragment.MyGroupCreated.MyGroupCreatedFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/group_create_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ActionBarTheme" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view_group_created"
        android:layout_below="@id/group_create_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/none_my_group_create_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Bạn chưa tạo bất kỳ nhóm nào"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        android:textSize="45sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:ignore="HardcodedText" />
    <include
        android:id="@+id/card_view_progress_bar_my_created"
        layout="@layout/card_view_bar"
        android:visibility="gone" />
</RelativeLayout>