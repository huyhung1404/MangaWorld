<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/joined_group"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/my_group_create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border_text_view_group"
        android:paddingHorizontal="10dp"
        android:text="@string/my_groups"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/none_my_group_join_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Bạn chưa tham gia bất kỳ nhóm nào"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        android:textSize="45sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:ignore="HardcodedText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_group_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp" />
    <include
        android:id="@+id/card_view_progress_bar_my_group"
        layout="@layout/card_view_bar"
        android:visibility="gone" />
</RelativeLayout>