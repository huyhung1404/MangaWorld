<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:orientation="vertical"
    android:outlineAmbientShadowColor="@color/black"
    android:paddingHorizontal="10dp">

    <include
        android:id="@+id/gmail_forgot"
        layout="@layout/item_edit_text_login" />
    <include
        android:id="@+id/new_password_forgot"
        layout="@layout/item_edit_text_login" />
    <include
        android:id="@+id/re_new_password_forgot"
        layout="@layout/item_edit_text_login" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:inputType="numberSigned"
            android:hint="Nhập mã OTP"
            android:maxLength="6"
            android:textColor="@color/white"
            android:textColorHint="#A1FFFFFF"
            android:textSize="16sp" />
        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Gửi mã"
            android:textAllCaps="false"
            android:textSize="15sp" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_forgot"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="30dp"
        android:background="#386991"
        android:text="@string/access"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Đã có tài khoản?"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btn_login_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/u_login"
            android:textSize="16sp"
            android:textColor="#03A9F4" />

    </LinearLayout>

</LinearLayout>