<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_status_community"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/name_status_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/avatar_status_community"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/avatar_status_community" />

        <ImageView
            android:id="@+id/icon_menu_status"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_menu"
            android:layout_marginEnd="10dp"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/name_sec_status_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_status_community"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/avatar_status_community"
            android:textSize="16sp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/avatar_status_community" />

        <TextView
            android:id="@+id/time_status_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_status_community"
            android:layout_toRightOf="@id/name_sec_status_community"
            android:textSize="16sp"
            android:layout_toEndOf="@id/name_sec_status_community" />

        <TextView
            android:id="@+id/content_status_community"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/avatar_status_community"
            android:layout_marginHorizontal="10dp"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/image_content_status_community"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_status_community"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:adjustViewBounds="true"
            tools:ignore="ContentDescription" />

        <include
            android:id="@+id/book_status_community"
            layout="@layout/item_manga_category"
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_below="@id/image_content_status_community"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:id="@+id/quantity_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_status_community"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"/>

        <TextView
            android:id="@+id/like_status"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/quantity_like"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:text="@string/like_status"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:drawableStartCompat="@drawable/icon_like"
            tools:ignore="RelativeOverlap"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/quantity_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_status_community"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"/>

        <TextView
            android:id="@+id/comment_status"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/quantity_comment"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:text="@string/comment"
            android:textSize="25sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/icon_comment"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>