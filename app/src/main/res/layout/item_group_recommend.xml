<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="195dp"
    android:layout_height="80dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/group_item_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp" />

        <TextView
            android:id="@+id/group_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/group_item_image"
            android:layout_toRightOf="@+id/group_item_image"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/group_item_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/group_item_name"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/group_item_image"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/group_item_image" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>