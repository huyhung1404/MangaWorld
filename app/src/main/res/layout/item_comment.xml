<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_img_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/text_name_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:layout_toEndOf="@+id/item_img_avatar"
        android:layout_toRightOf="@+id/item_img_avatar"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_content_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_name_comment"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/item_img_avatar"
        android:layout_toRightOf="@+id/item_img_avatar"
        android:textColor="@color/black" />

</RelativeLayout>