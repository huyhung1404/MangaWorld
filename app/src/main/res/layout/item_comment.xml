<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginRight="5dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_img_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/text_name_comment"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/item_img_avatar"
            android:layout_toRightOf="@+id/item_img_avatar"/>
        <TextView
            android:id="@+id/text_content_comment"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_below="@+id/text_name_comment"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/item_img_avatar"
            android:layout_toRightOf="@+id/item_img_avatar"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>