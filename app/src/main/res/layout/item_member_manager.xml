<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_member_manager"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/name_member_manager"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toEndOf="@id/avatar_member_manager"
        android:layout_toRightOf="@id/avatar_member_manager"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/button_member_accept"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_below="@id/name_member_manager"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="25dp"
        android:layout_toEndOf="@id/avatar_member_manager"
        android:layout_toRightOf="@id/avatar_member_manager"
        android:background="@drawable/member_manager_accept"
        android:gravity="center"
        android:text="@string/access"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/button_member_refuse"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/name_member_manager"
        android:layout_toEndOf="@id/button_member_accept"
        android:layout_toRightOf="@id/button_member_accept"
        android:background="@drawable/member_manager_refuse"
        android:gravity="center"
        android:text="@string/refuse"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>