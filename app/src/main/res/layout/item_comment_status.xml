<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/form_comment_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_comment_status"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/name_comment_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@id/avatar_comment_status"
        android:layout_toRightOf="@id/avatar_comment_status"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/content_comment_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_comment_status"
        android:layout_marginVertical="3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/avatar_comment_status"
        android:layout_toRightOf="@+id/avatar_comment_status"
        android:background="@drawable/border_comment_text"
        android:padding="5dp"
        android:paddingTop="20dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/time_comment_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_comment_status"
        android:layout_toEndOf="@id/avatar_comment_status"
        android:layout_toRightOf="@id/avatar_comment_status" />

    <TextView
        android:id="@+id/like_comment_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_comment_status"
        android:layout_marginHorizontal="15dp"
        android:layout_toEndOf="@id/time_comment_status"
        android:layout_toRightOf="@id/time_comment_status"
        android:text="@string/like_status"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/button_reply_comment_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_comment_status"
        android:layout_toEndOf="@id/like_comment_status"
        android:layout_toRightOf="@id/like_comment_status"
        android:text="@string/reply"
        android:textStyle="bold" />

